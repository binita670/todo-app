{
  "name": "todo-app",
  "version": "1.0.0",
  "description": "This is a todo application",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean:dist": "rimraf dist",
    "copy-views": "copyfiles -u 1 \"./src/views/**/*.ejs\" \"./dist\"",
    "dev": "npm run prebuild && concurrently \"tsc --watch\" \"nodemon ./dist/index.js\"",
    "typeorm": "cross-var node ./node_modules/typeorm/cli.js",
    "prebuild": "tsc && npm run copy-views && npm run build:js && npm run migration:run",
    "build": "node dist/index",
    "migration:create": "npm run typeorm migration:create ./src/database/migrations/$npm_config_name",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d ./src/database/database.ts",
    "migration:revert": "npx typeorm-ts-node-commonjs migration:revert -d ./src/database/database.ts",
    "build:js": "node esbuild.config.js",
    "build:js:watch": "node esbuild.config.js --watch",
    "test:e2e": "cross-env NODE_ENV=test npm run migration:run && jest --config ./jest-e2e.json --runInBand --detectOpenHandles --verbose --forceExit",
    "test:unit": "cross-env NODE_ENV=test jest --config ./jest-unit.json --runInBand --detectOpenHandles --verbose --forceExit"
  },
  "nodemonConfig": {
    "watch": [
      "./src/views",
      "./dist"
    ],
    "ext": "ejs,js",
    "events": {
      "restart": "copyfiles -u 1 ./src/views/**/* ./dist"
    }
  },
  "author": "Binita Shrestha",
  "license": "ISC",
  "dependencies": {
    "@types/moment-timezone": "^0.5.30",
    "config": "^3.3.9",
    "cors": "^2.8.5",
    "ejs": "^3.1.9",
    "esbuild": "^0.19.4",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "http-status-code": "^2.1.0",
    "method-override": "^3.0.0",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "pg": "^8.11.3",
    "rimraf": "^5.0.5",
    "ts-node": "10.9.1",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/config": "^3.3.1",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.5",
    "@types/method-override": "^0.0.33",
    "@types/supertest": "^2.0.14",
    "concurrently": "^8.2.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "rootDir": ".",
    "modulePaths": [
      "<rootDir>"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/"
    ]
  }
}
