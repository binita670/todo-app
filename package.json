{
  "name": "todo-app",
  "version": "1.0.0",
  "description": "This is a todo application",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently \"tsc --watch\" \"nodemon ./dist/index.js\"",
    "clean:dist": "rimraf dist",
    "build": "tsc && npm run copy-views",
    "copy-views": "copyfiles -u 1 ./src/views/**/* ./dist",
    "typeorm": "cross-var node ./node_modules/typeorm/cli.js",
    "migration:create": "npm run typeorm migration:create ./src/database/migrations/$npm_config_name",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d ./src/database/database.ts",
    "migration:revert": "npx typeorm-ts-node-commonjs migration:revert -d ./src/database/database.ts",
    "build:js": "node esbuild.config.js"
  },
  "nodemonConfig": {
    "watch": [
      "./src/views",
      "./dist"
    ],
    "ext": "ejs,js",
    "events": {
      "restart": "copyfiles -u 1 ./src/views/**/* ./dist"
    }
  },
  "author": "Binita Shrestha",
  "license": "ISC",
  "dependencies": {
    "config": "^3.3.9",
    "cors": "^2.8.5",
    "ejs": "^3.1.9",
    "esbuild": "^0.19.4",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "http-status-code": "^2.1.0",
    "method-override": "^3.0.0",
    "moment": "^2.29.4",
    "pg": "^8.11.3",
    "rimraf": "^5.0.5",
    "ts-node": "10.9.1",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/config": "^3.3.1",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/method-override": "^0.0.33",
    "concurrently": "^8.2.1",
    "copyfiles": "^2.4.1",
    "cross-var": "^1.1.0",
    "nodemon": "^3.0.1",
    "tsc": "^2.0.4",
    "typescript": "^5.2.2"
  }
}
